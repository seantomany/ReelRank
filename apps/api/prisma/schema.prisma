generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(cuid())
  firebaseUid String   @unique
  email       String   @unique
  displayName String?
  photoUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  soloSwipes      SoloSwipe[]
  pairwiseChoices PairwiseChoice[]
  hostedRooms     Room[]           @relation("HostedRooms")
  roomMembers     RoomMember[]
  submittedMovies RoomMovie[]
  roomSwipes      RoomSwipe[]
}

model SoloSwipe {
  id        String   @id @default(cuid())
  userId    String
  movieId   Int
  direction String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])

  @@unique([userId, movieId])
  @@index([userId])
}

model PairwiseChoice {
  id        String   @id @default(cuid())
  userId    String
  movieAId  Int
  movieBId  Int
  chosenId  Int
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])

  @@index([userId])
}

model Room {
  id        String   @id @default(cuid())
  code      String   @unique
  hostId    String
  status    String   @default("lobby")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  host    User         @relation("HostedRooms", fields: [hostId], references: [id])
  members RoomMember[]
  movies  RoomMovie[]
  swipes  RoomSwipe[]
  results RoomResult[]

  @@index([code])
}

model RoomMember {
  id       String   @id @default(cuid())
  roomId   String
  userId   String
  joinedAt DateTime @default(now())

  room Room @relation(fields: [roomId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id])

  @@unique([roomId, userId])
}

model RoomMovie {
  id                String   @id @default(cuid())
  roomId            String
  movieId           Int
  submittedByUserId String
  createdAt         DateTime @default(now())

  room        Room @relation(fields: [roomId], references: [id], onDelete: Cascade)
  submittedBy User @relation(fields: [submittedByUserId], references: [id])

  @@unique([roomId, movieId])
}

model RoomSwipe {
  id        String   @id @default(cuid())
  roomId    String
  userId    String
  movieId   Int
  direction String
  createdAt DateTime @default(now())

  room Room @relation(fields: [roomId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id])

  @@unique([roomId, userId, movieId])
  @@index([roomId])
}

model RoomResult {
  id               String   @id @default(cuid())
  roomId           String
  computedAt       DateTime @default(now())
  algorithmVersion String
  rankedMovieIds   Int[]
  scoreBreakdown   Json

  room Room @relation(fields: [roomId], references: [id], onDelete: Cascade)

  @@index([roomId])
}
